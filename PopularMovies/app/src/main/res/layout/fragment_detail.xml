<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="app.popularmovies.sanjana.com.popularmovies.DetailActivityFragment"
    tools:showIn="@layout/activity_detail">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/original_title"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/original_title"
        android:text="Release Date: "
        android:id="@+id/releaseDateTxt"
         />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_below="@+id/original_title"
        android:layout_toRightOf="@+id/releaseDateTxt"
        android:id="@+id/releaseDate"
         />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/final_image_url"
        android:layout_below="@+id/releaseDate"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating(out of 10): "
        android:layout_below="@+id/final_image_url"
        android:id="@+id/rating"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:layout_below="@+id/final_image_url"
        android:layout_toRightOf="@+id/rating"
        android:id="@+id/ratingresult"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overview: "
        android:id="@+id/overview"
        android:layout_below="@+id/rating"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vote_average"
        android:numStars="10"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_below="@+id/overview"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: "
        android:id="@+id/movie_id"
        android:layout_below="@+id/vote_average"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:id="@+id/button"
        android:layout_below="@+id/movie_id"

        android:layout_marginTop="60dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trailor"
        android:id="@+id/button2"

        android:layout_below="@+id/button"


    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorite"
        android:id="@+id/button3"
        android:layout_centerVertical="true"
        android:layout_below="@+id/button2"

        />

</RelativeLayout>
</ScrollView>